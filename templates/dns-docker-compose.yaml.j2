version: "3.5"

networks:
  dns_network:
    driver: bridge
    ipam:
      config:
      - subnet: 172.20.0.0/16

# More info at https://github.com/pi-hole/docker-pi-hole/ and https://docs.pi-hole.net/
services:
  pihole:
    container_name: pihole
    image: pihole/pihole:latest
    restart: always
    depends_on:
      - unbound
    networks:
      dns_network:
        ipv4_address: 172.20.0.254
    ports:
      - "53:53/tcp"
      - "53:53/udp"
      - "67:67/udp"
      - "80:80/tcp"
    environment:
      - TZ={{ timezone }}
      - WEBPASSWORD={{ pihole_password }}
      - PIHOLE_DNS_=172.20.0.253#5335
      - CUSTOM_CACHE_SIZE=0
    volumes:
      - './pihole/etc-pihole/:/etc/pihole/'
      - './pihole/etc-dnsmasq.d/:/etc/dnsmasq.d/'
    # Recommended but not required (DHCP needs NET_ADMIN)
    # https://github.com/pi-hole/docker-pi-hole#note-on-capabilities
    cap_add:
      - NET_ADMIN
    labels:
      - homepage.group=Networking
      - homepage.name=PI Hole
      - homepage.icon=pihole.png
      - homepage.href=http://{{ hostname }}/admin/
      - homepage.description=Ad blocker
      - homepage.server=localhost
      - homepage.container=pihole

  unbound:
    container_name: unbound
    image: madnuttah/unbound:latest
    restart: always
    networks:
      dns_network:
        ipv4_address: 172.20.0.253
    ports:
      - "5335:5335/tcp"
      - "5335:5335/udp"
    environment:
      - TZ={{ timezone }}
      - ServerIP=172.20.0.253
    volumes:
      - './unbound/unbound.conf:/usr/local/unbound/unbound.conf'
      - './unbound/conf.d/:/usr/local/unbound/conf.d/'
      - './unbound/iana.d/:/usr/local/unbound/iana.d/'
      - './unbound/log.d/:/usr/local/unbound/log.d/'
      - './unbound/zones.d/:/usr/local/unbound/zones.d/'
    healthcheck:
      disable: true
